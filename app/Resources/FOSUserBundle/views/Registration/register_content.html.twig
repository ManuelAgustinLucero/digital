{% trans_default_domain 'FOSUserBundle' %}


<div class="page-header header-filter" style="background-image: url({{ asset('/assets/img/bg7.jpg') }}); background-size: cover; background-position: top center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                <div class="card card-login">
                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form'}}) }}

                        {#<div class="card-header card-header-primary text-center">#}
                            {#<h4 class="card-title">Login</h4>#}
                            {#<div class="social-line">#}
                                {#<a href="#pablo" class="btn btn-just-icon btn-link">#}
                                    {#<i class="fa fa-facebook-square"></i>#}
                                {#</a>#}
                                {#<a href="#pablo" class="btn btn-just-icon btn-link">#}
                                    {#<i class="fa fa-twitter"></i>#}
                                {#</a>#}
                                {#<a href="#pablo" class="btn btn-just-icon btn-link">#}
                                    {#<i class="fa fa-google-plus"></i>#}
                                {#</a>#}
                            {#</div>#}
                        {#</div>#}
                        <h3 class="description text-center">Registro</h3>
                    <div class="text-center text-danger" style="text-decoration: none;">
                        {{ form_errors(form.plainPassword.first) }}
                        {{ form_errors(form.plainPassword.second) }}
                        {{ form_errors(form.email) }}
                        {{ form_errors(form.username) }}
                    </div>
                        <div class="card-body">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                      <i class="material-icons">face</i>
                                    </span>
                                </div>
                                {{ form_widget(form.username,{'attr':{'class':'form-control ','placeholder':'Usuario','required':'required'}}) }}
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                      <i class="material-icons">mail</i>
                                    </span>
                                </div>
                                {{ form_widget(form.email,{'attr':{'class':'form-control ','placeholder':'Email','required':'required'}}) }}
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                      <i class="material-icons">lock_outline</i>
                                    </span>
                                </div>
                                {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control ','placeholder':'Contraseña','required':'required'}}) }}

                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                      <i class="material-icons">lock_outline</i>
                                    </span>
                                </div>
                                {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control ','placeholder':'Repita contraseña','required':'required'}}) }}

                            </div>
                        </div>
                    <br><br>
                        <div class="footer text-center">
                            <input class="btn btn-primary btn-link btn-wd btn-lg" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />

                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
