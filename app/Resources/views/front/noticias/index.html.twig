{% extends 'base.html.twig' %}
  {% block stylesheets %}
      {{ parent() }}
      <link rel="stylesheet"   href="{{ asset('assets/css/style.css') }}" />

      <link rel="stylesheet"   href="{{ asset('assets/cards/css/hipster_cards.css') }}" />
      <link rel="stylesheet"   href="{{ asset('assets/cards/css/pe-icon-7-stroke.css') }}" />
      <style>
          .card{
              margin-bottom: 70px;
          }
      </style>
  {% endblock %}
{% block body %}
    <div id="maschico"  class="page-header header-filter clear-filter purple-filter" data-parallax="true" style="background-image: url({{ asset('assets/img/bg2.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="brand">
                        <h1>Noticias</h1>
                        <h3>Las mejores noticias.</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main main-raised">
        <div class="section section-basic">
            <div class="container">

                <div class="row ">
                    <div class="col-md-3 offset-9 form-inline ">
                        <label for="">Filtro</label>
                        <select name="" id="" class="form-control">
                            <option value=""></option>
                            <option value="">Mas reciente</option>
                            <option value="">Mas popularidad</option>
                        </select>
                    </div>
                </div>

                <div class="wrapper">
                        <div class="container">

                                    <div class="masonry-container">
                                        {% for post in posts %}
                                        {% if  post.caard.id == 12 %}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-with-border card-just-text" data-background="color" data-color="black" >
                                                    <div class="content">
                                                        <h4 class="title">"{{ post.titulo }}"</h4>
                                                        <p class="description">- {{ post.user.name }}</p>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>
                                        {% endif %}
                                        {% if post.caard.id == 1 %}

                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card">
                                                    <div class="header">
                                                        <img src="{{ asset('/uploads/'~post.imagenHeader ) }}"/>
                                                        <div class="filter"></div>

                                                        <div class="actions">
                                                            <a href="{{ path('noticias_show', { 'id': post.id }) }}" class="btn btn-round btn-fill btn-neutral btn-modern">
                                                                Leer
                                                            </a>
                                                        </div>
                                                    </div>

                                                    <div class="content">
                                                        <h6 class="category">Nuevo</h6>
                                                        <h4 class="title"><a href="{{ path('noticias_show', { 'id': post.id }) }}">{{ post.titulo }}</a></h4>
                                                        <p class="description">{{ post.titulo }}</p>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>
                                        {% endif %}
                                        {% if  post.caard.id== 9 %}

                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <div class="header">
                                                        <div class="category">
                                                            <h6 class="label label-danger">Solicitud trabajo</h6>
                                                        </div>
                                                    </div>

                                                    <div class="content">
                                                        <h4 class="title title-uppercase">
                                                            <a href="{{ path('noticias_show', { 'id': post.id }) }}">{{ post.titulo }}</a>
                                                        </h4>
                                                        <p class="description">{{ post.titulo }}</p>
                                                    </div>
                                                    <div class="filter">

                                                    </div>
                                                </div> <!-- end card -->
                                            </div>
                                        {% endif %}




                                        {% if  post.caard.id == 6%}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card">
                                                    <div class="content">
                                                        <h6 class="category">{% if post.fechaCreacion %}{{ post.fechaCreacion|date('d/m/Y') }}{% endif %}</h6>
                                                        <h4 class="title"><a href="{{ path('noticias_show', { 'id': post.id }) }}">{{ post.titulo }}</a></h4>
                                                        <p class="description">{{ post.titulo }}</p>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}

                                        {% if post.caard.id == 2%}
                                            <a href="{{ path('noticias_show', { 'id': post.id }) }}">
                                                <div class="card-box col-md-4 col-sm-6">
                                                    <div class="card">
                                                        <div class="header">
                                                            <img src="{{ asset('/uploads/'~post.imagenHeader ) }}" />

                                                            <div class="social-line social-line-visible" data-buttons="4">
                                                                <button class="btn btn-social btn-facebook">
                                                                    <i class="fa fa-facebook"></i>
                                                                </button>
                                                                <button class="btn btn-social btn-twitter">
                                                                    <i class="fa fa-twitter"></i>
                                                                </button>
                                                                <button class="btn btn-social btn-pinterest">
                                                                    <i class="fa fa-pinterest"></i>
                                                                </button>
                                                                <button class="btn btn-social btn-google">
                                                                    <i class="fa fa-google-plus"></i>
                                                                </button>
                                                            </div>
                                                        </div>

                                                        <div class="content">
                                                            <h6 class="category">Nuevo</h6>
                                                            <h4 class="title">{{ post.titulo }}</h4>
                                                            <p class="description">{{ post.subtitulo }}</p>
                                                        </div>
                                                    </div> <!-- end card -->
                                                </div>
                                            </a>

                                        {% endif %}

                                        {% if  post.caard.id== 10%}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <div class="header">
                                                        <div class="category">
                                                            <h6 class="label label-warning">Solicitud de Trabajador</h6>
                                                        </div>

                                                        <div class="social-line" data-buttons="3">
                                                            <button class="btn btn-social btn-facebook">
                                                                <i class="fa fa-facebook-square"></i> Share
                                                            </button>
                                                            <button class="btn btn-social btn-twitter">
                                                                <i class="fa fa-twitter"></i> Tweet
                                                            </button>
                                                            <button class="btn btn-social btn-pinterest">
                                                                <i class="fa fa-pinterest"></i> Pin
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <div class="content">
                                                        <h4 class="title">{{ post.titulo }}</h4>
                                                        <p class="description">{{ post.subtitulo }}</p>
                                                    </div>
                                                    <div class="filter"></div>
                                                </div> <!-- end card -->
                                            </div>



                                        {% endif %}



                                        {% if post.caard.id==21231%}

                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-with-border" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <div class="header">
                                                    </div>

                                                    <div class="content text-center">
                                                        <p class="description">When selling products it's always a good idea to go with commanding fonts that are good at showing authority and security. I feel like Raleway and Roboto do just that.</p>
                                                    </div>
                                                    <div class="footer text-center">
                                                        <a href="{{ path('noticias_show', { 'id': post.id }) }}" class="btn btn-danger btn-fill btn-round">Read article</a>
                                                    </div>
                                                    <div class="filter"></div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}


                                        {% if  post.caard.id==21231%}

                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-just-text card-with-border" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <div class="content">
                                                        <h4 class="title title-modern">"I liked nutella, triangles and outerspace way before hipsters."</h4>
                                                        <p class="description">- Not A Hipster</p>
                                                    </div>
                                                    <div class="filter"></div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}

                                        {% if  post.caard.id==21231%}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-with-border" data-background="color" data-color="azure">
                                                    <div class="header">
                                                        <div class="icon">
                                                            <i class="pe-7s-radio"></i>
                                                        </div>
                                                    </div>
                                                    <div class="content text-center">
                                                        <h4 class="title title-modern">Nicecream.fm</h4>
                                                        <p class="description">Best vibes in the marketplace. Listen to the best music from '89. I feel like Nicecream and .fm do just that.</p>
                                                    </div>
                                                    <div class="footer text-center">
                                                        <button class="btn btn-neutral btn-round btn-fill btn-modern">Listen Now!</button>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>


                                        {% endif %}

                                        {% if post.caard.id == 5 %}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-with-border" data-background="color" data-color="orange">
                                                    <div class="content">
                                                        <h6 class="category">Hot Article</h6>
                                                        <h4 class="title">
                                                            <a href="{{ path('noticias_show', { 'id': post.id }) }}"> Try the new hairstyle from this Barber Shop</a>
                                                        </h4>
                                                        <p class="description">When selling products it's always a good idea to go with commanding fonts that are good at showing authority and security. I feel like Raleway and Roboto do just that.</p>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>


                                        {% endif %}
                                        {% if  post.caard.id == 7%}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card text-center" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <h4 class="title title-modern">Hipster Vacation</h4>

                                                    <div class="content">
                                                        <div class="price">
                                                            <h6>From</h6>
                                                            <h4>2.799<b class="currency">$</b></h4>
                                                        </div>
                                                        <p class="description">When selling products it's always a good idea to go with commanding fonts that are good at showing authority and security.</p>
                                                    </div>
                                                    <div class="filter"></div>
                                                    <div class="footer btn-center">
                                                        <a href="{{ path('noticias_show', { 'id': post.id }) }}" class="btn btn-neutral btn-round btn-fill">Ofertar!</a>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>


                                        {% endif %}





                                        {% if  post.caard.id==21231%}

                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-with-border">
                                                    <div class="header">
                                                        <div class="icon">
                                                            <i class="pe-7s-glasses"></i>
                                                        </div>
                                                    </div>
                                                    <div class="content text-center">
                                                        <h4 class="title text-center">Hipster Glasses App</h4>
                                                        <p class="description">Here can be a description about the application that is for download. I feel like this app is what I need.</p>
                                                    </div>
                                                    <div class="footer btn-center">
                                                        <button class="btn btn-default btn-round btn-fill btn-info btn-modern">Download</button>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}





                                        {% if post.caard.id==21231 %}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-just-text card-with-border" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <div class="content">
                                                        <div class="filter filter-red"></div>
                                                        <h4 class="title title-modern">"I like the way you work it
                                                            No diggity, I gotta bag it up."</h4>
                                                        <p class="description">- Chet Faker</p>
                                                    </div>

                                                    <div class="filter"></div>
                                                </div> <!-- end card -->
                                            </div>


                                        {% endif %}
                                        {% if post.caard.id==21231 %}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card card-with-border" data-background="color" data-color="green">
                                                    <div class="header">
                                                        <div class="icon">
                                                            <i class="pe-7s-gift"></i>
                                                        </div>

                                                        <div class="social-line" data-buttons="3">
                                                            <button class="btn btn-social btn-facebook">
                                                                <i class="fa fa-facebook"></i>
                                                            </button>
                                                            <button class="btn btn-social btn-twitter">
                                                                <i class="fa fa-twitter"></i>
                                                            </button>
                                                            <button class="btn btn-social btn-pinterest">
                                                                <i class="fa fa-pinterest"></i>
                                                            </button>
                                                        </div>

                                                    </div>
                                                    <div class="content text-center">
                                                        <p class="description">Your friend <b>Michael Osborn</b> has sent you a hipster gift card.</p><br>
                                                    </div>
                                                    <div class="footer btn-center">
                                                        <button class="btn btn-neutral btn-fill btn-modern">View Gift Details</button>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}


                                        {% if  post.caard.id==3%}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card" data-background="color" data-color="black">
                                                    <div class="header">
                                                        <img src="{{ asset('/uploads/'~post.imagenHeader ) }}"/>

                                                        <div class="social-line" data-buttons="2">
                                                            <button class="btn btn-social">
                                                                <i class="fa fa-facebook-square"></i> Share
                                                            </button>
                                                            <button class="btn btn-social">
                                                                <i class="fa fa-twitter"></i> Tweet
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <div class="content">
                                                        <h6 class="category">Interior Design</h6>
                                                        <h4 class="title"><a href="{{ path('noticias_show', { 'id': post.id }) }}">Hipster Apartment sold for $1.2 mil.</a></h4>
                                                        <p class="description">When selling products it's always a good idea to go with commanding fonts that are good at showing authority and security. I feel like Raleway and Roboto do just that.</p>
                                                    </div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}

                                        {% if  post.caard.id==8%}
                                            <div class="card-box col-md-4 col-sm-6">
                                                <div class="card text-center" data-background="image" data-src="{{ asset('/uploads/'~post.imagenHeader ) }}">
                                                    <h4 class="title title-modern">{{ post.titulo }}</h4>

                                                    <div class="content">
                                                        <div class="price">
                                                            <h6>Desde</h6>
                                                            <h4>{{ post.precio }}<b class="currency">$</b></h4>
                                                        </div>
                                                    </div>

                                                    <div class="footer btn-center">
                                                        <a href="{{ path('noticias_show', { 'id': post.id }) }}" class="btn btn-neutral btn-round btn-modern">Ofertar</a>
                                                    </div>

                                                    <div class="filter filter-blue"></div>
                                                </div> <!-- end card -->
                                            </div>

                                        {% endif %}


                                        {% endfor %}


                                    </div>
                            </div>


                        </div>

                </div> <!-- end wrapper -->

            </div>

        </div>
    </div>

{% endblock %}
       {% block javascripts %}
           {{ parent() }}

           <script src="{{ asset('assets/cards/js/bootstrap.min.js') }}" ></script>
           <script src="{{ asset('assets//cards/js/hipster-cards.js') }}" ></script>
           <!--  Just for demo	 -->
           <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.1/masonry.pkgd.min.js"></script>
           <script>
               $( "#body" ).removeClass( "profile-page" ).addClass( "index-page" );
           </script>
           <script>

               $().ready(function(){

                   var $container = $('.masonry-container');

                   doc_width = $(document).width();

                   if (doc_width >= 768){
                       $container.masonry({
                           itemSelector        : '.card-box',
                           columnWidth         : '.card-box',
                           transitionDuration  : 0
                       });
                   } else {
                       $('.mas-container').removeClass('mas-container').addClass('row');
                   }
               });
           </script>


       {% endblock %}